<div class="jumbotron">
  <div class="form-horizontal form-group form-group-lg row">
     <div class="col-sm-12 col-md-4">
       {{input type="text" value=name class="form-control" placeholder="Course Name" autofocus="autofocus"}}
     </div>
     <div class="col-sm-12 col-md-4">
       <div class="input-group mb-3">
        <div class="input-group-prepend">
          {{#link-to 'teachers.new' class="btn btn-success" type="button"}}{{fa-icon "plus-circle" class="plus"}}{{/link-to}}
        </div>
       <select class="custom-select select-styling" id="inputGroupSelect03" onchange={{action "setSelection" value="target.value"}}>
          <option selected disabled>Select Teacher</option>
          {{#each model as |teacher|}}
            <option value={{teacher.id}}>{{teacher.name}}</option>
          {{/each}}
        </select>
      </div>
     </div>
     <div class="col-sm-12 col-md-4">
       <button class="btn btn-success btn-lg btn-block" {{action 'saveCourse'}} disabled={{isDisabled}}>Create Course</button>
     </div>
   </div>
</div>
{{outlet}}
